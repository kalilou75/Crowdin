{% extends 'base.html.twig' %}


{% block body %}
    <h1>Connexion sur le site</h1>

    <form action="{{ path('security_login') }}" method="post">
        <div class="form-group">
            <input placeholder="Adress email..." required name ="_username" type="text" class="from-control">
        </div>

        <div class="form-group">
            <input placeholder="Mot de passe..." required name ="_password" type="password" class="from-control">
        </div>

         <div class="form-group">
            <button type="submit" class="btn btn-success">Connexion !!</button>
        </div>
   </form>
   
{% endblock %}